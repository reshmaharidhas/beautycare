<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="55dp"
    tools:context="com.reshmaharidhas.reshma.beautycare.Lips">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/lipsimage"
                app:srcCompat="@drawable/lips100"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp" />
            <ImageView
                android:id="@+id/imageViewlip1"
                app:srcCompat="@drawable/lips"
                android:layout_below="@id/lipsimage"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:id="@+id/textViewlip1"
                android:text="Coconut Oil Balm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/lipsimage"
                android:layout_toRightOf="@+id/imageViewlip1"
                android:layout_toEndOf="@+id/imageViewlip1"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textViewlip1a"
                android:text="@string/lip1a"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:background="@color/colorpalegreen1"
                android:gravity="center"
                android:layout_below="@+id/imageViewlip1"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/textViewlip1b"
                android:text="@string/lip1b"
                android:layout_below="@id/textViewlip1a"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:gravity="center" />
            <View
                android:id="@+id/view1"
                android:layout_below="@id/textViewlip1b"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <ImageView
                android:id="@+id/imageViewlip2"
                app:srcCompat="@drawable/lips"
                android:layout_below="@id/view1"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:id="@+id/textViewlip2"
                android:text="@string/lip2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/view1"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/imageViewlip1"
                android:layout_toEndOf="@+id/imageViewlip1"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textViewlip2a"
                android:text="@string/lip2m"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_below="@+id/textViewlip2"
                android:layout_centerHorizontal="true" />
            <View
                android:id="@+id/view2"
                android:layout_below="@id/textViewlip2a"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <ImageView
                android:id="@+id/imageViewlip3"
                app:srcCompat="@drawable/lips"
                android:layout_below="@id/view2"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:id="@+id/textViewlip3"
                android:text="@string/lip3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/view2"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/imageViewlip1"
                android:layout_toEndOf="@+id/imageViewlip1"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewlip3a"
                android:text="@string/lip3m"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_below="@+id/imageViewlip3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
    <!-- TODO: Update blank fragment layout -->

</FrameLayout>
