<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_astringent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.reshmaharidhas.reshma.beautycare.Astringent"
    tools:showIn="@layout/activity_astringent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/astringent2"
        android:id="@+id/imageView20"
        android:layout_marginTop="19dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/textViewastringent"
        android:text="@string/astringentdesc"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/imageView20"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fontFamily="serif" />
    <Button
        android:text="Astringent Lotions"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:id="@+id/button17"
        android:textSize="22sp"
        android:background="@android:color/holo_blue_bright"
        style="@style/Base.CardView"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/textViewastringent"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
</android.support.v4.widget.NestedScrollView>
