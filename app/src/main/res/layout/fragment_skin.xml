<!-- TODO: Update blank fragment layout -->
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="55dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/moisturising"
                        android:id="@+id/moisturising"
                        android:layout_alignTop="@+id/cleansing"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="53dp"
                        android:layout_marginEnd="53dp"
                        android:contentDescription="@string/moisturising" />

                    <TextView
                        android:text="@string/nourishing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nourishing"
                        android:textColor="@color/black"
                        android:layout_alignLeft="@+id/textViewcleansing"
                        android:layout_alignStart="@+id/textViewcleansing"
                        android:id="@+id/textViewnourishing"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/toning"
                        android:id="@+id/toning"
                        android:layout_alignTop="@+id/nourishing"
                        android:layout_alignLeft="@+id/moisturising"
                        android:layout_alignStart="@+id/moisturising"
                        android:contentDescription="@string/nourishing" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/cleansing"
                        app:srcCompat="@drawable/cleansing"
                        android:layout_marginLeft="42dp"
                        android:layout_marginStart="42dp"
                        android:layout_marginTop="9dp"
                        android:contentDescription="@string/cleansing"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:text="@string/moisturising"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewmoist"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_below="@+id/moisturising"
                        android:layout_alignLeft="@+id/moisturising"
                        android:layout_alignStart="@+id/moisturising" />

                    <TextView
                        android:text="@string/cleansing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewcleansing"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_below="@+id/cleansing"
                        android:layout_alignLeft="@+id/cleansing"
                        android:layout_alignStart="@+id/cleansing" />

                    <TextView
                        android:text="@string/toning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewtoning"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_below="@+id/toning"
                        android:layout_alignRight="@+id/toning"
                        android:layout_alignEnd="@+id/toning"
                        android:layout_marginRight="20dp"
                        android:layout_marginEnd="20dp" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/nourishing"
                        android:layout_marginTop="20dp"
                        android:id="@+id/nourishing"
                        android:contentDescription="@string/nourishing"
                        android:layout_below="@+id/textViewcleansing"
                        android:layout_alignLeft="@+id/textViewnourishing"
                        android:layout_alignStart="@+id/textViewnourishing" />
                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        app:srcCompat="@drawable/astringent2"
                        android:id="@+id/astringent"
                        tools:ignore="ContentDescription"
                        android:layout_marginTop="30dp"
                        android:layout_below="@+id/textViewtoning"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
            </android.support.v4.widget.NestedScrollView>
    </FrameLayout>

