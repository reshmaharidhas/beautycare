<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_hair_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.reshmaharidhas.reshma.beautycare.HairSetting"
    tools:showIn="@layout/activity_hair_setting">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ImageView
    android:id="@+id/imageViewhairset1"
    app:srcCompat="@drawable/hairbrush"
    android:layout_width="25dp"
    android:layout_height="25dp" />
    <TextView
        android:id="@+id/textViewhairset1a"
        android:text="@string/hairset1a"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageViewhairset1"
        android:layout_toEndOf="@+id/imageViewhairset1" />
    <TextView
        android:id="@+id/textViewhairset1b"
        android:text="@string/hairset1b"
        android:layout_below="@id/textViewhairset1a"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <View
        android:id="@+id/view1"
        android:layout_marginBottom="3dp"
        android:layout_below="@id/textViewhairset1b"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <ImageView
        android:id="@+id/imageViewhairset2"
        app:srcCompat="@drawable/hairbrush"
        android:layout_below="@id/view1"
        android:layout_width="25dp"
        android:layout_height="25dp" />
    <TextView
        android:id="@+id/textViewhairset2"
        android:text="@string/hairset2"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="13dp" />
    <View
        android:id="@+id/view2"
        android:layout_marginBottom="3dp"
        android:layout_below="@id/textViewhairset2"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <ImageView
        android:id="@+id/imageViewhairset3"
        app:srcCompat="@drawable/hairbrush"
        android:layout_below="@id/view2"
        android:layout_width="25dp"
        android:layout_height="25dp" />
    <TextView
        android:id="@+id/textViewhairset3"
        android:text="@string/hairset3"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textViewhairset2"
        android:layout_toRightOf="@+id/imageViewhairset2"
        android:layout_toEndOf="@+id/imageViewhairset2" />
    <View
        android:id="@+id/view3"
        android:layout_marginBottom="3dp"
        android:layout_below="@id/textViewhairset3"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <ImageView
        android:id="@+id/imageViewhairset4"
        app:srcCompat="@drawable/hairbrush"
        android:layout_below="@id/view3"
        android:layout_width="25dp"
        android:layout_height="25dp" />
    <TextView
        android:id="@+id/textViewhairset4"
        android:text="@string/hairset4"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textViewhairset3"
        android:layout_toRightOf="@+id/imageViewhairset2"
        android:layout_toEndOf="@+id/imageViewhairset2" />
    <View
        android:id="@+id/view4"
        android:layout_marginBottom="3dp"
        android:layout_below="@id/textViewhairset4"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <ImageView
        android:id="@+id/imageViewhairset5"
        app:srcCompat="@drawable/hairbrush"
        android:layout_below="@id/view4"
        android:layout_width="25dp"
        android:layout_height="25dp" />
    <TextView
        android:id="@+id/textViewhairset5"
        android:text="@string/hairset5"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/black"
        android:layout_below="@+id/textViewhairset4"
        android:layout_toRightOf="@+id/imageViewhairset2"
        android:layout_toEndOf="@+id/imageViewhairset2" />
    <View
        android:id="@+id/view5"
        android:layout_marginBottom="3dp"
        android:layout_below="@id/textViewhairset5"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <ImageView
        android:id="@+id/imageViewhairset6"
        app:srcCompat="@drawable/hairbrush"
        android:layout_below="@id/view5"
        android:layout_width="25dp"
        android:layout_height="25dp" />
    <TextView
        android:id="@+id/textViewhairset6a"
        android:text="@string/hairset6a"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textViewhairset5"
        android:layout_toRightOf="@+id/imageViewhairset2"
        android:layout_toEndOf="@+id/imageViewhairset2" />
    <TextView
        android:id="@+id/textViewhairset6b"
        android:text="@string/hairset6b"
        android:layout_below="@id/textViewhairset6a"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
</android.support.v4.widget.NestedScrollView>
