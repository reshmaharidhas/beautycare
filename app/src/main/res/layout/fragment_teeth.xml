<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="55dp"
    tools:context="com.reshmaharidhas.reshma.beautycare.Teeth">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textViewteethdesc"
                android:text="@string/teethdesc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_below="@+id/imageViewteeth"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="7dp"
                android:textSize="16sp" />
            <ImageView
                android:id="@+id/imageViewteeth"
                app:srcCompat="@drawable/teeth2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="9dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <Button
                android:id="@+id/buttonteeth1"
                android:text="@string/teethbutton1"
                android:layout_width="230dp"
                android:textColor="@color/black"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:layout_marginTop="8dp"
                style="@style/Base.CardView"
                android:gravity="center_vertical|center_horizontal|center"
                android:layout_below="@+id/textViewteethdesc"
                android:layout_centerHorizontal="true" />

            <Button
                android:id="@+id/buttonteeth2"
                android:text="@string/teethbutton2"
                android:textColor="@color/black"
                android:layout_width="230dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:layout_marginTop="14dp"
                style="@style/Base.CardView"
                android:gravity="center_vertical|center_horizontal|center"
                android:layout_below="@+id/buttonteeth1"
                android:layout_alignLeft="@+id/buttonteeth1"
                android:layout_alignStart="@+id/buttonteeth1" />

            <Button
                android:id="@+id/buttonteeth3"
                android:text="@string/teethbutton3"
                android:layout_width="230dp"
                android:textColor="@color/black"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                style="@style/Base.CardView"
                android:gravity="center_vertical|center_horizontal|center"
                android:layout_below="@+id/buttonteeth2"
                android:layout_alignLeft="@+id/buttonteeth2"
                android:layout_alignStart="@+id/buttonteeth2"
                android:layout_marginTop="10dp" />
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</FrameLayout>
